<Window x:Class="CoffeeShop.Views.FrmHoaDon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gọi món &amp; Hóa đơn" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Menu món ăn" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="cbDanhMuc" SelectionChanged="cbDanhMuc_SelectionChanged" Margin="0,0,0,10"/>
            <ListBox x:Name="lstSanPham" DisplayMemberPath="TenSanPham" SelectionChanged="lstSanPham_SelectionChanged"/>
        </StackPanel>

        <!-- Hóa đơn -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock x:Name="txtTenBan" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:Name="lvChiTietHoaDon" Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Món" DisplayMemberBinding="{Binding TenSanPham}" Width="150"/>
                        <GridViewColumn Header="SL" DisplayMemberBinding="{Binding SoLuong}" Width="50"/>
                        <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding DonGia}" Width="100"/>
                        <GridViewColumn Header="Thành tiền" DisplayMemberBinding="{Binding ThanhTien}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Tổng tiền:" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="txtTongTien" FontSize="16" FontWeight="Bold" Foreground="DarkGreen" Margin="10,0,0,0"/>
            </StackPanel>

            <Button Content="Thanh toán" Click="btnThanhToan_Click" Margin="0,20,0,0" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
