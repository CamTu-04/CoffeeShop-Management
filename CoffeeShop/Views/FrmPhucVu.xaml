<Window x:Class="CoffeeShop.Views.FrmPhucVu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý phục vụ" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Nội dung -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#2D2D30" Grid.Column="0">
            <TextBlock Text="Phục vụ" Foreground="White" FontSize="20" Margin="10"/>
            <Button Content="Quản lý Bàn" Name="btnBan" Margin="10" Click="btnBan_Click"/>
            <Button Content="Doanh thu ngày" Name="btnDoanhThu" Margin="10" />
            <!-- Bạn có thể thêm nút Đăng xuất hoặc Thoát -->
        </StackPanel>

        <!-- Nội dung -->
        <Grid Grid.Column="1" Name="mainContent" Background="White"/>
    </Grid>
</Window>
