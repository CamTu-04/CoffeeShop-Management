<Window x:Class="CoffeeShop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - Coffee Shop" 
        Width="350" Height="450"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" Margin="10" >
                <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Ô nhập tên đăng nhập có placeholder -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="txtUsername"
                             Height="40"
                             FontSize="14"
                             Padding="10"
                             BorderBrush="#ccc"
                             BorderThickness="1"
                             Background="White"
                             Foreground="Black"/>

                    <TextBlock Text="Tên đăng nhập"
                               Foreground="Gray"
                               FontSize="14"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               x:Name="usernamePlaceholder"/>
                </Grid>

                <!-- Ô nhập mật khẩu có placeholder -->
                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="txtPassword"
                                 Height="40"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#ccc"
                                 BorderThickness="1"
                                 Background="White"/>
                    <TextBlock x:Name="txtPlaceholder"
                               Text="Mật khẩu"
                               Foreground="Gray"
                               FontSize="14"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Nút đăng nhập -->
                <Button Content="Đăng nhập" 
                        Background="#FF7B3F" 
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="40"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_Click"/>

                <!-- Nút đăng nhập admin -->
                <Button Content="Đăng nhập Admin"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="#7B3F00"
                        FontSize="13"
                        Margin="0,10,0,0"
                        Cursor="Hand"
                        Click="AdminLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
