<Window x:Class="CoffeeShop.Views.Admin.SanPhamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Sản Phẩm"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f2f5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nhập thông tin sản phẩm -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Tên sản phẩm:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenSanPham" Width="300" Height="28" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Giá:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtGia" Width="150" Height="28" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Danh mục:" Width="120" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbDanhMuc" Width="200" Height="28" DisplayMemberPath="TenDanhMuc" SelectedValuePath="MaDanhMuc"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Mô tả:" Width="120" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtMoTa" Width="400" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- DataGrid sản phẩm -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid x:Name="dgSanPham"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgSanPham_SelectionChanged"
                      AlternatingRowBackground="#f9f9f9"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      RowHeaderWidth="40">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Width="50" Binding="{Binding STT}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Tên sản phẩm" Width="200" Binding="{Binding TenSanPham}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Giá" Width="100" Binding="{Binding Gia}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Danh mục" Width="150" Binding="{Binding TenDanhMuc}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Mô tả" Width="*" Binding="{Binding MoTa}" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Nút chức năng -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="➕ Thêm" Click="BtnThem_Click"/>
            <Button Content="✏️ Sửa" Click="BtnSua_Click"/>
            <Button Content="🗑️ Xóa" Click="BtnXoa_Click"/>
            <Button Content="❌ Đóng" Click="BtnDong_Click"/>
        </StackPanel>
    </Grid>
</Window>
