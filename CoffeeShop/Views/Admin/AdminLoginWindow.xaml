<Window x:Class="CoffeeShop.Views.Admin.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập Admin - Coffee Shop" 
        Width="350" Height="450"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F8F8"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Đăng nhập Admin" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Ô nhập tài khoản admin -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="txtAdminUsername"
                             Height="40"
                             FontSize="14"
                             Padding="10"
                             BorderBrush="#ccc"
                             BorderThickness="1"
                             Background="White"
                             Foreground="Black"/>
                    <TextBlock Text="Tên đăng nhập (Admin)"
                               Foreground="Gray"
                               FontSize="14"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               x:Name="adminUserPlaceholder"/>
                </Grid>

                <!-- Ô nhập mật khẩu admin -->
                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="txtAdminPassword"
                                 Height="40"
                                 FontSize="14"
                                 Padding="10"
                                 BorderBrush="#ccc"
                                 BorderThickness="1"
                                 Background="White"/>
                    <TextBlock Text="Mật khẩu"
                               Foreground="Gray"
                               FontSize="14"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               x:Name="adminPassPlaceholder"/>
                </Grid>

                <!-- Nút đăng nhập -->
                <Button Content="Đăng nhập" 
                        Background="#FF7B3F" 
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="40"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="AdminLoginButton_Click"/>

                <!-- Nút quay lại -->
                <Button Content="Quay lại"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="#7B3F00"
                        FontSize="13"
                        Margin="0,10,0,0"
                        Cursor="Hand"
                        Click="BackButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
