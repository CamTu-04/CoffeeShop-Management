<Window x:Class="CoffeeShop.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trang quản trị CoffeeShop" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Xin chào, Quản trị viên!" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <UniformGrid Columns="3" Rows="2" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Content="👨‍💼 Quản lý nhân viên" Width="200" Height="80" Margin="10" />
                <Button Content="🪑 Quản lý bàn" Width="200" Height="80" Margin="10" Click="BtnBan_Click"/>
                <Button Content="☕ Quản lý sản phẩm" Width="200" Height="80" Margin="10" Click="BtnSanPham_Click"/>
                <Button Content="🗂️ Quản lý danh mục" Width="200" Height="80" Margin="10" Click="BtnDanhMuc_Click"/>
                <Button Content="📊 Báo cáo doanh thu" Width="200" Height="80" Margin="10" />
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
