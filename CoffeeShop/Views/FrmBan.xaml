<UserControl x:Class="CoffeeShop.Views.Admin.FrmBan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#F7F9FA">

    <UserControl.Resources>
        <!-- 🎨 Style nút bo tròn -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2ECC71"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🎨 Style nút phụ -->
        <Style x:Key="LightButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#E8F3F1"/>
            <Setter Property="Foreground" Value="#1B4F72"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Bên trái: danh sách bàn -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="14" Margin="6" BorderBrush="#D8E3E7" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="🏠 KHU VỰC" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                <ComboBox x:Name="cbKhuVuc" Margin="0,10,0,15" Height="34" Background="#EEF5F3"
                          BorderBrush="#B8CCC7"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="540">
                    <WrapPanel x:Name="spBan" Orientation="Horizontal" ItemWidth="100" ItemHeight="80"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Giữa: danh sách món -->
        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="14" Margin="6" BorderBrush="#D8E3E7" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="☕ DANH SÁCH MÓN" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="wpMon" ItemWidth="180" ItemHeight="200"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Phải: hóa đơn -->
        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="14" Margin="6" BorderBrush="#D8E3E7" BorderThickness="1">
            <StackPanel>
                <TextBlock x:Name="txtBanHienTai" Text="🪑 Bàn: (chưa chọn)" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,12"/>

                <ListView x:Name="lvHoaDon" Height="460" Margin="0,0,0,8" Background="#FAFAFA" BorderBrush="#E0E6E8" BorderThickness="1">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Món" Width="140" DisplayMemberBinding="{Binding TenMon}"/>
                            <GridViewColumn Header="SL" Width="40" DisplayMemberBinding="{Binding SoLuong}"/>
                            <GridViewColumn Header="Giá" Width="80" DisplayMemberBinding="{Binding Gia}"/>
                            <GridViewColumn Header="Thành tiền" Width="100" DisplayMemberBinding="{Binding ThanhTien}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="💰 Tổng: " VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="txtTongTien" Text="0 đ" Margin="6,0,0,0" FontWeight="Bold" Foreground="#27AE60" FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button x:Name="btnTachBan" Content="➗ Tách bàn" Width="110" Margin="6"
                            Style="{StaticResource LightButtonStyle}"/>
                    <Button x:Name="btnThanhToan" Content="💳 Thanh toán" Width="130" Margin="6"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
